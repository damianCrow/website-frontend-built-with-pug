mixin nav(config = {sideNav: true, animatedHeight: true, bright: true})
  nav#main-nav(class='toggle-nav ' + (config.sideNav ? 'toggle-nav--side ' : '') + (config.animatedHeight ? 'toggle-nav--animated-height ' : '') + (config.bright ? 'toggle-nav--bright' : ''), data-start-shut='')
    ul.toggle-nav__list
      li.toggle-nav__item
        a.toggle-nav__link(title='Overview', href='/overview')
          span Overview
      li.toggle-nav__item.toggle-nav__item--sub-nav-container
        a.toggle-nav__link(title='Private', href='/private')
          span Private
        ul.toggle-nav__sub-nav
          li.toggle-nav__item.toggle-nav__item--sub-item
            a.toggle-nav__sub-link(title='Platforms', href='/platforms')
              span Platforms
          li.toggle-nav__item.toggle-nav__item--sub-item
            a.toggle-nav__sub-link(title='FOREX Technologies', href='/forex-technologies')
              span FOREX Technologies
      li.toggle-nav__item.toggle-nav__item--sub-nav-container
        a.toggle-nav__link(title='Institutional', href='/institutional')
          span Institutional
        ul.toggle-nav__sub-nav
          li.toggle-nav__item.toggle-nav__item--sub-item
            a.toggle-nav__sub-link(title='Account Details', href='/account-details')
              span Account Details
          li.toggle-nav__item.toggle-nav__item--sub-item
            a.toggle-nav__sub-link(title='Products', href='/products')
              span Products
          li.toggle-nav__item.toggle-nav__item--sub-item
            a.toggle-nav__sub-link(title='Platforms', href='/platforms')
              span Platforms
      li.toggle-nav__item.toggle-nav__item--sub-nav-container
        a.toggle-nav__link(title='Insight', href='/insight')
          span Insight
        ul.toggle-nav__sub-nav
          li.toggle-nav__item.toggle-nav__item--sub-item
            a.toggle-nav__sub-link(title='Account Details', href='/account-details')
              span Account Details
      li.toggle-nav__item
        a.toggle-nav__link(title='Contact', href='/contact')
          span Contact