mixin nav(config = {sideNav: true, animatedHeight: true, bright: true})
  nav#main-nav(class='toggle-nav ' + (config.sideNav ? 'toggle-nav--side ' : '') + (config.animatedHeight ? 'toggle-nav--animated-height ' : '') + (config.bright ? 'toggle-nav--bright' : ''))
    ul.toggle-nav__list
      li.toggle-nav__item
        a.toggle-nav__link(title='Overview')
          span Overview
      li.toggle-nav__item.toggle-nav__item--sub-nav-container
        a.toggle-nav__link(title='Private')
          span Private
        ul.toggle-nav__sub-nav
          li.toggle-nav__item.toggle-nav__item--sub-item
            a.toggle-nav__sub-link(title='Platforms')
              span Platforms
          li.toggle-nav__item.toggle-nav__item--sub-item
            a.toggle-nav__sub-link(title='FOREX Technologies')
              span FOREX Technologies
      li.toggle-nav__item.toggle-nav__item--sub-nav-container
        a.toggle-nav__link(title='Institutional')
          span Institutional
        ul.toggle-nav__sub-nav
          li.toggle-nav__item.toggle-nav__item--sub-item
            a.toggle-nav__sub-link(title='Account Details')
              span Account Details
          li.toggle-nav__item.toggle-nav__item--sub-item
            a.toggle-nav__sub-link(title='Products')
              span Products
          li.toggle-nav__item.toggle-nav__item--sub-item
            a.toggle-nav__sub-link(title='Platforms')
              span Platforms
      li.toggle-nav__item.toggle-nav__item--sub-nav-container
        a.toggle-nav__link(title='Insight')
          span Insight
        ul.toggle-nav__sub-nav
          li.toggle-nav__item.toggle-nav__item--sub-item
            a.toggle-nav__sub-link(title='Account Details')
              span Account Details
      li.toggle-nav__item
        a.toggle-nav__link(title='Contact')
          span Contact