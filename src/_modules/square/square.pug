mixin square(spec)
  section(class='square ' + (spec.bright ? 'square--bright ' : ''))
    span.square__meta!=(spec.meta.text ? spec.meta.text : '13:00 GMT 5th October 2017')
    h1.square__title
      if spec.title.date
        time(datetime="2017-04-29T19:00")!=(sspec.title.text ? spec.title.text : '13:00 GMT 5th October 2017')
      else
        span!=spec.title.text
    .square__bottom-meta
      if block
        block